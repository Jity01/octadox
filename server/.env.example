# Octadox Stripe Configuration
# Copy this file to .env and fill in your values

# Stripe API Keys
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Stripe Price ID
# Create a product in Stripe Dashboard, then create a price for it
# The price ID starts with "price_"
STRIPE_PRICE_ID=price_YOUR_PRICE_ID_HERE

# Stripe Webhook Secret (optional for local development)
# Set up webhook at https://dashboard.stripe.com/webhooks
# Point it to: https://your-domain.com/api/webhook
# Events to listen for: checkout.session.completed, payment_intent.payment_failed
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Frontend URL (for redirects after payment)
FRONTEND_URL=http://localhost:3000

# Server Port
PORT=3000
